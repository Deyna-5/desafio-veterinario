<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Birthday</th>
      <th>Visitas la veterinario:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthday %></td>
        <td> <%= pet.pet_histories.count %> </td>
        <td><%= link_to "Historial", client_pet_path(@client, pet) %></td>
        <td> <%= link_to "Nueva consulta", new_client_pet_pet_history_path(@client, pet) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

